# === HTTP server ===
# По умолчанию сервис слушает 127.0.0.1:8080, отдавайте наружу через nginx.
HTTP_ADDR=127.0.0.1:8080


# === Auth ===
# Если задан — все защищённые эндпоинты требуют Authorization: Bearer <API_TOKEN>
API_TOKEN=change-me-please


# === gRPC (Xray API) ===
# Адрес Xray gRPC API (обязательно localhost/приватный порт; НЕ открывайте наружу!)
GRPC_ADDR=127.0.0.1:10085


# Тег inbound. Если не задан — будет автоопределение первого inbound protocol=vless из config.json
X_IN_TAG=


# Публичный хост/домен для VLESS-ссылок. Если не задан — берётся первый внешний IPv4 интерфейса, иначе 400.
X_PUBLIC_HOST=example.com


# Значение flow по умолчанию (для Vision)
X_DEFAULT_FLOW=xtls-rprx-vision


# (Опционально) Явное pbk для REALITY, если нельзя вычислить из privateKey
X_PBK=


# Разрешённый Origin для CORS (по умолчанию CORS отключён)
CORS_ORIGIN=